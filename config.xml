<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "uy.com.apps.peliculas"
        versionCode = "10"
        version     = "1.0.0" >

    <name>MantApp</name>

    <description>
        App para registro de mantenimientos de autom√≥viles
    </description>

    <author href="http://github.com/gonzaguima" email="gonzaguima@gmail.com">
        Gonzalo Guimaraens
    </author>
    
    <preference name='phonegap-version' value='cli-7.0.1' />
    <preference name='pgb-builder-version' value='2' />
    
    <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
    <plugin name="cordova-plugin-vibration" spec="~3.1.0" />
    <!--<plugin name="cordova-plugin-battery-status" spec="~2.0.2" />
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <plugin name="cordova-plugin-contacts" spec="~2.3.1" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />-->
    
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreenDuration" value="500"/>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="splash.png"/>
        <icon src="icon.png"/>
     </platform>
    
    <!--platform name="ios">
        <splash src="splash.png"/>
      
    </platform!-->
</widget>